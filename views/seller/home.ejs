<%- include('./common/header') %>
<div class="col-lg-10">

   <div class="dashboard-content-area">
      <!-- put your contente -->
      <h1>All Document</h1>
      <div class="row">
         <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
               <div class="inner">
                  <h3><%= orderCount%></h3>

                  <p>Orders</p>
               </div>
               <div class="icon">
                  <i class="ion ion-bag"></i>
               </div>
               <a href="/seller/orders/" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
         </div>
         <!-- ./col -->
         <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
               <div class="inner">
                  <h3><%= offerCount%><sup style="font-size: 20px"></sup></h3>

                  <p>Offers</p>
               </div>
               <div class="icon">
                  <i class="ion ion-stats-bars"></i>
               </div>
               <a href="/seller/offers/" class="small-box-footer">More info <i
                     class="fas fa-arrow-circle-right"></i></a>
            </div>
         </div>
         <!-- ./col -->
         <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
               <div class="inner">
                  <h3><%= productCount%></h3>

                  <p>Products</p>
               </div>
               <div class="icon">
                  <i class="ion ion-person-add"></i>
               </div>
               <a href="/seller/products/" class="small-box-footer">More info <i
                     class="fas fa-arrow-circle-right"></i></a>
            </div>
         </div>
         <!-- ./col -->
      </div>
      <div class="container my-5">
         <h1 class="mb-4">Shop Details</h1>
         <% if(shop.image){%>
          <img src="/Productimages/<%= shop.image%>"  width="100px" height="100px" alt="<%= shop.image%>">
       <%  }else{%>
           <img src="/imagesStore/image.png"  width="100px" height="100px" alt="<%= shop.image%>">
        <% } %>
         <!-- Display User Information -->
         <div class="card mb-4">
             <div class="card-header">
                 <strong>Name:</strong> <%= shop.name %>
             </div>
             <div class="card-body">
                 <p><strong>Description:</strong> <%= shop.description %></p>
             </div>
         </div>
      
         <!-- Button to Edit Profile -->
         <a href="/seller/edit-profile" class="btn btn-primary">Edit Profile</a>
      
      
      </div>
      <!-- end your content here -->
   </div>

</div>
</div>
</div>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<%- include('./common/footer') %>